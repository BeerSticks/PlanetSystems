        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640"
        Background="Azure">

        <Button x:Name="btnLoadFromFile" Width="130" 
